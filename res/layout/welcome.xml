<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ll" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="top">

	<!--Dummy Layout for first Focus-->

	<TextView android:layout_height="wrap_content" android:id="@+id/textview"
		android:layout_width="fill_parent" android:text="@string/Infotext">
	</TextView>
	<TableLayout android:gravity="center" android:layout_width="fill_parent" android:layout_below="@+id/textview" android:layout_height="match_parent" android:id="@+id/MenuLayout">
		<TableRow android:id="@+id/DifficultyRow">
			<RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:saveEnabled="true" android:checkedButton="@+id/radio_easy" android:layout_gravity="right" android:layout_weight="1" android:id="@+id/DifficultyRadioGroup">
				<RadioButton android:id="@+id/radio_easy" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="Easy" android:saveEnabled="true" android:layout_weight="1" android:layout_width="match_parent"></RadioButton>
				<RadioButton android:id="@+id/radio_medium" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="Medium" android:saveEnabled="true" android:layout_weight="1" android:layout_width="match_parent"></RadioButton>
				<RadioButton android:id="@+id/radio_hard" android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center" android:text="Hard" android:saveEnabled="true" android:layout_weight="1" android:layout_width="match_parent"></RadioButton>
			</RadioGroup>
		</TableRow>
		<TableRow android:id="@+id/Row1" android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="center">
		<Button android:text="Start" android:layout_gravity="fill_vertical" android:layout_width="match_parent" android:id="@+id/NewGameButton" android:layout_height="match_parent" android:layout_weight="1"></Button>
		</TableRow>
		<TableRow android:id="@+id/Row2" android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="center">
		<Button android:text="Load Game" android:id="@+id/LoadGameButton" android:layout_width="fill_parent" android:layout_height="match_parent" android:layout_weight="1"></Button>
		</TableRow>
		<TableRow android:id="@+id/Row3" android:layout_marginBottom="2dp" android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="center">
		<Button android:onClick="ExitGame" android:text="Exit" android:id="@+id/ExitButton" android:layout_width="fill_parent" android:layout_height="match_parent" android:layout_weight="1"></Button>
		</TableRow>
	</TableLayout>



</RelativeLayout>