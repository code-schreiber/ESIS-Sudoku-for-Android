<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/NineButtons_Layout" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:gravity="center">

<LinearLayout android:id="@+id/NineButtons_Layout_One" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
		<Button 
			android:text="1" 
			android:layout_width="wrap_content"
			android:id="@+id/button_one" 
			android:layout_height="wrap_content" />
	
		<Button 
			android:text="2" 
			android:id="@+id/button_two"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
</LinearLayout>	

<LinearLayout android:id="@+id/NineButtons_Layout_Two"
	android:layout_below="@+id/NineButtons_Layout_One" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content">
		<Button 
			android:text="3" 
			android:layout_width="wrap_content"
			android:id="@+id/button_three" 
			android:layout_height="wrap_content" />
	
		<Button 
			android:text="4" 
			android:layout_width="wrap_content"
			android:id="@+id/button_four" 
			android:layout_height="wrap_content" />
</LinearLayout>	

	





</RelativeLayout>